#!/usr/bin/env php
<?php

use Composer\InstalledVersions;
use Symfony\Component\Console\Application;
use MuckiRestic\App\Console;

require_once __DIR__ . '/../vendor/autoload.php';

$application = new Application();
$application->add(new Console());
$application->setName('MuckiRestic Console');
$application->setVersion('v'.InstalledVersions::getVersion('muckiware/restic'));

$application->run();
